      "cell_type": "code",
      "source": [
        "import socket\n",
        "import threading\n",
        "import time\n",
        "\n",
        "HOST = \"127.0.0.1\"\n",
        "PORT = 5001\n",
        "\n",
        "# --- Servidor ---\n",
        "def servidor():\n",
        "    server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)\n",
        "    server_socket.bind((HOST, PORT))\n",
        "    server_socket.listen(1)\n",
        "    print(\"Servidor aguardando conex√£o...\")\n",
        "\n",
        "    conn, addr = server_socket.accept()\n",
        "    print(f\"Conectado por {addr}\")\n",
        "\n",
        "    while True:\n",
        "        data = conn.recv(1024).decode()\n",
        "        if not data:\n",
        "            break\n",
        "        print(f\"[Servidor] Cliente disse: {data}\")\n",
        "        resposta = f\"Recebi sua mensagem: {data}\"\n",
        "        conn.sendall(resposta.encode())\n",
        "\n",
        "    conn.close()\n",
        "    server_socket.close()\n",
        "\n",
        "# --- Cliente ---\n",
        "def cliente():\n",
        "    time.sleep(1)  # esperar o servidor iniciar\n",
        "    client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)\n",
        "    client_socket.connect((HOST, PORT))\n",
        "    mensagens = [\"Oi servidor\", \"Tudo bem?\", \"sair\"]\n",
        "\n",
        "    for msg in mensagens:\n",
        "        print(f\"[Cliente] enviando: {msg}\")\n",
        "        client_socket.sendall(msg.encode())\n",
        "        data = client_socket.recv(1024).decode()\n",
        "        print(f\"[Cliente] recebeu: {data}\")\n",
        "        time.sleep(1)\n",
        "\n",
        "    client_socket.close()\n",
        "\n",
        "# --- Executar no Colab ---\n",
        "threading.Thread(target=servidor).start()\n",
        "threading.Thread(target=cliente).start()\n"
      ],
